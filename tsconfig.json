{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "lib/**/*",
    "test/**/*",
    "types/**/*",
    "index.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
